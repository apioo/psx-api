{% if namespace %}
package {{ namespace|lower }}
{% endif %}

import (
    "encoding/json"
    "io/ioutil"
    "net/http"
    "time"
    "github.com/apioo/sdkgen-go"
)

type {{ className }} struct {
    resource *sdkgen.Resource
}

{% for class, resource in resources %}
// {{ resource.methodName }} {{ resource.description|raw }}
func (group {{ className }}) {{ resource.methodName }}({% for name, arg in resource.properties %}{{ name }} {{ arg.type }}{% if not loop.last %}, {% endif %}{% endfor %}) *{{ class }} {
    return New{{ class }}({% for name, arg in resource.properties %}{{ name }}, {% endfor %}group.resource)
}

{% endfor %}

func New{{ className }}(resource *sdkgen.Resource) *{{ className }} {
    return &{{ className }} {
        resource: resource,
    }
}

{
  "$import": {
    "my_schema": "file:///../schema/schema.json"
  },
  "operations": {
    "PSX.Api.Tests.Parser.Attribute.TestController.doGet": {
      "description": "A long **Test** description",
      "method": "GET",
      "path": "/foo",
      "return": {
        "code": 200,
        "schema": {
          "$ref": "my_schema:Song"
        }
      },
      "arguments": {
        "fooId": {
          "in": "path",
          "schema": {
            "type": "string"
          }
        },
        "foo": {
          "in": "query",
          "schema": {
            "description": "Test",
            "type": "string"
          }
        },
        "bar": {
          "in": "query",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        "baz": {
          "in": "query",
          "schema": {
            "type": "string",
            "enum": [
              "foo",
              "bar"
            ]
          }
        },
        "boz": {
          "in": "query",
          "schema": {
            "type": "string",
            "pattern": "[A-z]+"
          }
        },
        "integer": {
          "in": "query",
          "schema": {
            "type": "integer"
          }
        },
        "number": {
          "in": "query",
          "schema": {
            "type": "number"
          }
        },
        "date": {
          "in": "query",
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        "boolean": {
          "in": "query",
          "schema": {
            "type": "boolean"
          }
        },
        "string": {
          "in": "query",
          "schema": {
            "type": "string"
          }
        },
        "payload": {
          "in": "body",
          "schema": {
            "$ref": "my_schema:Song"
          }
        }
      }
    }
  }
}
